NEXT_PUBLIC_PROJECT_NAME="Base de Desenvolvimento ATIC 2025"
NEXT_PUBLIC_API_URL=http://localhost:3000/

# NextAuth configuration
AUTH_SECRET=
NEXTAUTH_URL=http://localhost:3005

# External auth service used by Credentials authorize
# In Docker on Linux, use host.docker.internal to reach services on the host
# Example for local dev: http://localhost:3006/
# Example for Docker on CentOS host: http://host.docker.internal:3006/
AUTH_SERVER=http://localhost:3006/

# Controls whether external auth is called; set to "local" to bypass
# external auth and validate only against local DB users
ENVIRONMENT=local